{{# partial "titulo" }}	
	<title>Cuentas</title>
{{/partial}}

{{#partial "contenido"}}	
<div class="panel panel-default">
	<div class="panel-heading">Empresa &gt; <b>Cuentas</b></div>
  	<div class="panel-body">
  		<form action="/DDSTpAnual/cuentas/buscar" method="GET" class="form-inline">
			{{#with empresas}}
				<input type="hidden" id="empresaSeleccionada" value="{{empresaSeleccionada}}" />
				<input type="hidden" id="periodoSeleccionado" value="{{periodoSeleccionado}}" /> 
				<div class="form-group" style="margin-right: 20px;">
		    		<select id="empresas" class="form-control" name="empresaSeleccionada" placeholder="Empresa">
			    		{{#each empresas}}
			 				<option>{{nombre}}</option>
			  			{{/each}}
		    		</select>
		  		</div>
		  		<div class="form-group" style="margin-right: 20px;">
		  			<select id="periodos" class="form-control" name="periodoSeleccionado">
			  			{{#each periodos}}
			 				<option>{{fecha}}</option>
			  			{{/each}}
		  			</select>
		  		</div>
		  		<button type="submit" class="btn btn-primary">Buscar</button>
		  	{{/with}}
	  	</form>
	</div>
</div>

{{#with cuentas}}
	<div class="panel panel-default">
  		<div class="panel-body">
			<table class="table table-condensed">
				<thead>
					<tr>
			   			<th>Empresa</th>
			       		<th>Cuenta</th>
			   			<th>Fecha</th>
			       		<th>Valor</th>
					</tr>
				</thead>
				<tbody>
					{{#each cuentas}}
						<tr>
					   		<td>{{nombreEmpresa}}</td>
					       	<td>{{nombreCuenta}}</td>
					   		<td>{{fecha}}</td>
					   		<td>{{valor}}</td>	
						</tr>
					{{/each}}
				</tbody>	
			</table>
		</div>
	</div>
{{/with}}

{{/partial}}
{{# partial "footer" }}
	<script type="text/javascript" src="../DDSTpAnual/js/listadoCuentas.js"></script>	
	<script type="text/javascript" src="../js/listadoCuentas.js"></script>	
{{/partial}}
