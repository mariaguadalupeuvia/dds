{{# partial "titulo" }}	
	
<title>Indicadores</title>

{{/partial}}

{{# partial "acciones" }}	
    <div class="columnHeader">	
        <button type="button" class="btn btn-success btn-lg" onclick="window.open('/indicadores/nuevo')">Nuevo indicador</button>
    </div>
{{/partial}}

{{#partial "contenido"}}
<div class="panel panel-default">
	<div class="panel-heading">Indicador &gt; <b>Ejecutar Indicadores</b></div>
  	<div class="panel-body">
		<form action="/DDSTpAnual/indicadores/ejecutar" method= "GET" class="form-inline">
			<input type="hidden" id="empresaSeleccionada" value="{{empresaSeleccionada}}" />
			<input type="hidden" id="periodoSeleccionado" value="{{periodoSeleccionado}}" /> 
			<div class="form-group" style="margin-right: 20px;">
	    		<select id="empresas" class="form-control" name="empresaSeleccionada" placeholder="Empresa">
    				{{#with empresas}}
			    		{{#each empresas}}
			 				<option>{{nombre}}</option>
			  			{{/each}}
					{{/with}}
	    		</select>
	  		</div>
	  		<div class="form-group" style="margin-right: 20px;">
	  			<select id="periodos" class="form-control" name="periodoSeleccionado">
		  			{{#each periodos}}
		 				<option>{{fecha}}</option>
		  			{{/each}}
	  			</select>
	  		</div>
	  		<button type="submit" class="btn btn-primary">Ejecutar</button>
		</form>
	</div>
</div>	
{{#with indicadoresEvaluados}}
	<div class="panel panel-default">
  		<div class="panel-body">
			<table class="table table-condensed">
				<thead>
					<tr>
			   			<th>Indicador</th>
			   			<th>Formula</th>
				   		<th>Periodo</th>
				   		<th>Valor</th>
					</tr>
				</thead>
				<tbody>
					{{#each indicadoresEvaluados}}
						<tr>
					   		<td>{{nombreIndicador}}</td>
					   		<td>{{formulaIndicador}}</td>
						   	<td>{{periodo}}</td>
						   	<td>{{valor}}</td>
						</tr>
					{{/each}}
				</tbody>	
			</table>
		</div>
	</div>
{{/with}}
{{/partial}}
{{# partial "footer" }}
	<script type="text/javascript" src="../DDSTpAnual/js/listadoIndicadores.js"></script>	
	<script type="text/javascript" src="../js/listadoIndicadores.js"></script>	
{{/partial}}
