{{# partial "titulo" }}	
	
<title>Indicadores</title>

{{/partial}}

{{# partial "acciones" }}	
    <div class="columnHeader">	
        <button type="button" class="btn btn-success btn-lg" onclick="window.open('/indicadores/nuevo')">Nuevo indicador</button>
    </div>
{{/partial}}

{{#partial "contenido"}}
<div class="panel panel-default">
	<div class="panel-heading">Indicador &gt; <b>Ejecutar Indicador</b></div>
  	<div class="panel-body">
		<form action="/indicadores" method= "POST" class="form-inline">
			<div class="form-group" style="margin-right: 20px;">
	    		<select class="form-control" name="empresaSeleccionada" placeholder="Empresa">
    				{{#with empresas}}
			    		{{#each empresas}}
			 				<option>{{nombre}}</option>
			  			{{/each}}
					{{/with}}
	    		</select>
	  		</div>
	  		<div class="form-group" style="margin-right: 20px;">
	  			<select class="form-control" name="periodoSeleccionado">
		  			<option>2015</option>
	  				<option>2016</option>
					<option>2017</option>
	  			</select>
	  		</div>
	  		<button type="submit" class="btn btn-success">Ejecutar</button>
		</form>
	</div>
</div>	
{{#with indicadoresEvaluados}}
	<div class="panel panel-default">
  		<div class="panel-body">
			<table class="table table-condensed">
				<thead>
					<tr>
			   			<th>Nombre</th>
				   		<th>Fecha</th>
				   		<th>Valor</th>
					</tr>
				</thead>
				<tbody>
					{{#each indicadoresEvaluados}}
						<tr>
					   		<td>{{nombre}}</td>
						   	<td>{{fecha}}</td>
						   	<td>{{valor}}</td>
						</tr>
					{{/each}}
				</tbody>	
			</table>
		</div>
	</div>
{{/with}}
{{/partial}}
{{>layout.hbs}}