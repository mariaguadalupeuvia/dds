{{# partial "titulo" }}	
	
<title>Metodologias</title>

{{/partial}}
	
{{#partial "contenido"}}
<div class="panel panel-default">
	<div class="panel-heading">Metodologia &gt; <b>Ejecutar Metodologia</b></div>
  	<div class="panel-body">
		<form action="/metodologias/ejecutar" method= "GET" class="form-inline">
			<div class="form-group" style="margin-right: 20px;">
	    		<select class="form-control" name="metodologiaSeleccionada" placeholder="Metodologia">
    				{{#with metodologias}}
			    		{{#each metodologias}}
			 				<option>{{nombre}}</option>
			  			{{/each}}
					{{/with}}
	    		</select>
	  		</div>
	  		<div class="form-group" style="margin-right: 20px;">
	  			<select class="form-control" name="periodoSeleccionado">
		  			{{#each periodos}}
		 				<option>{{fecha}}</option>
		  			{{/each}}
	  			</select>
	  		</div>
	  		<button type="submit" class="btn btn-primary">Ejecutar</button>
		</form>
	</div>
</div>	

{{#with metodologiaSeleccionada}}
<div class="panel panel-default">
	<div class="panel-heading">Metodologia <b>{{nombre}}</b></div>
  	<div class="panel-body">
			<h2 style="margin: 5px;"> Condiciones: </h2>
			<ul type = disk>	
				{{#each condiciones}}
					<li><label> {{indicador.nombre}} <span class="label label-default">{{indicador.formula}}</span> {{filtro}} a {{valor}}</label></li>
				{{/each}}
			</ul>
		</div>
	</div>	
{{/with}}

{{#with empresas}}
	<div class="panel panel-default">
  		<div class="panel-body">
			<table class="table table-condensed">
				<thead>
					<tr>
				   		<th>Empresa</th>
					</tr>
				</thead>
				<tbody>
					{{#each empresas}}
						<tr>
					   		<td>{{nombre}}</td>
						</tr>
					{{/each}}
				</tbody>	
			</table>
		</div>
	</div>
{{/with}}

{{/partial}}
{{>layout.hbs}}